<div class="collapse navbar-collapse">
  <ul class="nav navbar-nav navbar-right">
    <li class="<%= 'active' if request.original_fullpath == prompts_path %>">
      <%= link_to 'Prompts', prompts_path %>
    </li>
    <li class="<%= 'active' if request.original_fullpath == characters_path %>">
      <%= link_to 'Characters', characters_path %>
    </li>
    <li class="<%= 'active' if request.original_fullpath == concepts_path %>">
      <%= link_to 'Concepts', concepts_path %>
    </li>
    <% if user_signed_in? %>
      <li class="<%= 'active' if request.original_fullpath == user_path(current_user) %>">
        <%= link_to current_user.email, current_user %>
      </li>
      <li class="<%= 'active' if request.original_fullpath == logout_path %>">
        <%= link_to 'Log Out', logout_path %>
      </li>
    <% else %>
      <li class="<%= 'active' if request.original_fullpath == login_path %>">
        <%= link_to 'Log In', login_path %>
      </li>
      <li class="<%= 'active' if request.original_fullpath == signup_path %>">
        <%= link_to 'Sign Up', signup_path %>
      </li>
    <% end %>
  </ul>
</div>
