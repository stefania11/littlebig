<div class="panel-group" id="accordion-<%= prompt.id %>">
  <div id="prompt-<%= prompt.id %>" class="panel panel-default single-blog timeline">
    <div class="panel-heading post-content overflow">
      <h2 class="post-title bold">
        <%= link_to prompt.body, prompt %>
      </h2>

      <h3 class="post-author">
        <% if current_user.collected_prompts.include? prompt %>
          <%= link_to uncollect_path(prompt), method: 'delete', remote: true do %>
            <i id="bookmark-<%= prompt.id %>" class="fa fa-bookmark"></i>
          <% end %>
        <% else %>
          <%= link_to collect_path(prompt), method: 'post', remote: true do %>
            <i id="bookmark-<%= prompt.id %>" class="fa fa-bookmark-o"></i>
          <% end %>
        <% end %>
        <%= link_to "By #{prompt.user.username}", prompt.user %>
      </h3>

      <% if prompt.image.present? %>
        <a data-parent="#accordion-<%= prompt.id %>" data-toggle="collapse" href="#collapse2<%= prompt.id %>">
          Show images
          <i class="fa fa-camera-retro"></i>
        </a>
      <% end %>

      <%= render partial: 'prompts/concepts_and_characters', locals: { prompt: prompt } %>

      <%= render partial: 'prompts/respond', locals: { prompt: prompt } %>
    </div>

    <a data-parent="#accordion-<%= prompt.id %>" data-toggle="collapse" href="#collapse<%= prompt.id %>">
      <div class="panel-footer overflow">
        <span class="post-date pull-left">
          <i class="fa fa-clock-o"></i>
          <%= time_ago_in_words prompt.created_at %>
          ago
        </span>

        <span class="comments-number pull-right">
          <%= pluralize prompt.responses.count, 'response' %>
          <% if prompt.responses.any? %>
          <i class="fa fa-angle-down"></i>
          <% end %>
        </span>
      </div>
    </a>

    <div class="panel-collapse collapse out" id="collapse<%= prompt.id %>">
      <div class="panel-body">
        <%= render prompt.responses %>
      </div>
    </div>

    <% if prompt.image.present? %>
    <div class="panel-collapse collapse out" id="collapse2<%= prompt.id %>">
      <div class="panel-body">
        <%= cl_image_tag prompt.image.path, size: '500x400', crop: :fit, class: 'response-image' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
