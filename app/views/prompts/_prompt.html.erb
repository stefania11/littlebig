<div class="post-comment">
    <div class="media-body">
        <h4>
          <%= link_to prompt.body, prompt %>
        </h4>
        <p>

        </p>
        <ul class="nav navbar-nav post-nav">
            <li>
              <i class="fa fa-clock-o"></i>
              <%= time_ago_in_words prompt.created_at %> ago
            </li>
            <li>
              <%= render partial: 'prompts/respond', locals: { prompt: prompt } %>
            </li>
        </ul>
    </div>
</div>
<div class="parrent">
    <ul class="media-list">
      <% prompt.responses.each do |response| %>
        <li class="post-comment reply">
          <%= render partial: 'prompts/prompt', locals: { prompt: response } %>
        </li>
      <% end %>
    </ul>
</div>
