<%= form_for(@prompt) do |f| %>
  <% if @prompt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prompt.errors.count, "error") %> prohibited this prompt from being saved:</h2>

      <ul>
      <% @prompt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <%# TODO: Should this be a form_tag? %>
  <div class="field">
    <label for="prompt[concept_list]">Concepts</label>
    <input type="text" name="prompt[concept_list]">
  </div>

  <%# TODO: can this/should this be DRYer? More flexible? %>
  <% if @prompt_id %>
    <div class="field">
      <%= f.hidden_field :prompt_id, value: @prompt_id %>
    </div>
  <% end %>

  <% if @concept_id %>
    <div class="field">
      <%= f.hidden_field :concept_id, value: @concept_id %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
