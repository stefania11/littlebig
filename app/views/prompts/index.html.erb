<p id="notice"><%= notice %></p>

<h1>Listing Prompts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prompts.each do |prompt| %>
      <tr>
        <td><%= prompt.body %></td>
        <td><%= link_to 'Show', prompt %></td>
        <td>
          <%= render partial: 'respond', locals: { prompt: prompt } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prompt', new_prompt_path %>
