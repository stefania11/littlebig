<%= form_for @prompt, remote: true do |f| %>
  <% if @prompt.errors.any? %>
    <div id="error_explanation" class="form-group">
      <h2><%= pluralize(@prompt.errors.count, "error") %> prohibited this prompt from being saved:</h2>

      <ul>
      <% @prompt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_area :body, placeholder: "Tell us what questions you would like to answer for your child?", class: 'form-control' %>
  </div>

  <h3>If you'd like...</h3>

  <div class="form-group">
    <label for="prompt[concept_list]" class="sr-only">Concepts</label>
    <input type="text" name="prompt[concept_list]" class="form-control" placeholder="What is this question mainly about? Could you list the main concept(s)?">
  </div>

  <div class="form-group">
    <label for="prompt[character_list]" class="sr-only">Characters</label>
    <input type="text" name="prompt[character_list]" class="form-control" placeholder="Are there any famous people or characters associated with this question?">
  </div>

  <!-- <div class="form-group">
    <label for="prompt[image]" class="sr-only">Image</label>
    <input type="text" name="prompt[image]" class="form-control" placeholder="Do you have an image for your question? Upload it here">

    <div class="form-group">
      <%# f.attachinary_file_field :images %>
    </div>
  </div> -->

  <%# TODO: can this/should this be DRYer? More flexible? %>
  <div class="actions">
    <%= f.submit class: 'btn btn-submit' %>
  </div>
<% end %>
