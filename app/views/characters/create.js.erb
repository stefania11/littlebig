var $form = $('#new_character');
var $success = $('<%= j render partial: "success", locals: { character: @character } %>').hide();

$form.slideUp(function(){
  $(this).replaceWith($success);

  var $successOnDOM = $('#<%= @character.id %>-success');
  var $newCharacterBtn = $('<%= j render "new_character_btn" %>').hide();

  $successOnDOM.slideDown(function(){
    window.setTimeout(function(){
      $successOnDOM.replaceWith($newCharacterBtn)

      $('#new_character_btn').slideDown();
    }, 3000);
  });
});
