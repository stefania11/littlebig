<%= form_tag character_mentions_path(@character.id), id: "character#{@character.id}_response", method: :post, remote: true, authenticity_token: true do %>
  <div class="form-group">
    <label for="prompt[body]" class="sr-only">Response</label>
    <input type="text" name="prompt[body]" placeholder="What should a child know about this character?" class="form-control">
  </div>

  <input type="submit" name="name" value="Respond" class="btn btn-submit">
<% end %>
