<%= form_for @user do |f| %>

  <% if @user.avatar? %>
      <%= cl_image_tag(@user.avatar.path, { size: '50x50', crop: :thumb, gravity: :face }) %>
  <% end %>

  <div class="form-group">
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'sr-only' %><br />
    <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'sr-only' %><br />
    <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', class: 'form-control' %>
  </div><br />

  <div class="actions">
    <%= f.submit class: 'btn btn-submit' %>
  </div>
<% end %>
