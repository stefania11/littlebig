$('#bookmark-<%= @prompt.id %>')
  .replaceWith('<%= j render partial: "collections/collect", locals: { prompt: @prompt } %>');

// On user's collection tab
$('.current_user_collection').find('#accordion-<%= @prompt.id %>').slideUp(function(){
  $(this.remove)

});

var newCount = "<%= pluralize current_user.collected_prompts.count, 'prompt' %> collected";
$('#collection_count').fadeOut(function(){
  $(this)
    .text(newCount)
    .fadeIn();
});
