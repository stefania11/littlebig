$('#bookmark-<%= @prompt.id %>')
  .replaceWith('<i id="bookmark-<%= @prompt.id %>" class="fa fa-bookmark-o"></i>')

// On user's collection tab
$('#accordion-<%= @prompt.id %>').slideUp(function(){
  $(this.remove)
  var newCount = "<%= pluralize current_user.collected_prompts.count, 'prompt' %> collected";

  $('#collection_count').fadeOut(function(){
    $(this)
      .text(newCount)
      .fadeIn();
  });
});
