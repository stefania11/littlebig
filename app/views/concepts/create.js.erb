var $form = $('#new_concept');
var $success = $('<%= j render partial: "success", locals: { concept: @concept } %>').hide();

$form.slideUp(function(){
  $(this).replaceWith($success);

  var $successOnDOM = $('#<%= @concept.id %>-success');
  var $newConceptBtn = $('<%= j render "new_concept_btn" %>').hide();

  $successOnDOM.slideDown(function(){
    window.setTimeout(function(){
      $successOnDOM.replaceWith($newConceptBtn)

      $('#concept_new_btn').slideDown();
    }, 3000);
  });
});
